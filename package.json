{
  "name": "release-note-action",
  "version": "1.0.0",
  "description": "Generic GitHub Action for extracting and generating release notes from merged pull requests",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "format": "prettier --write '**/*.ts'",
    "lint": "eslint src/**/*.ts",
    "package": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gorilli-team/release-note-ai.git"
  },
  "keywords": [
    "github-action",
    "release-notes",
    "pull-request",
    "changelog",
    "automation"
  ],
  "author": "Gorilli Team <tech@gorilli.io>",
  "packageManager": "yarn@1.22.0",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vercel/ncc": "^0.38.1",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  }
}
